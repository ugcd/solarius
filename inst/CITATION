citHeader("To cite the 'solarius' package in publications use:")

citEntry(
  entry="Article",
  title = "solarius: an R interface to SOLAR for variance component analysis in pedigrees",
  author = personList(
    as.person("Andrey Ziyatdinov"),
    as.person("Helena Brunel"),
    as.person("Helena Brunel"),
    as.person("Angel Martinez-Perez"),
    as.person("Alfonso Buil"),
    as.person("Alexandre Perera"),
    as.person("Jose Manuel Soria")),
  year = "2016",
  publisher = "Oxford Univ Press", 
  journal = "Bioinformatics",
  pages = "btw080",
  url = "http://bioinformatics.oxfordjournals.org/content/32/12/1901",
  textVersion =  paste("Ziyatdinov et al., ",
    "solarius: an R interface to SOLAR for variance component analysis in pedigrees, ",
    "Bioinformatics (2016)")  
)
